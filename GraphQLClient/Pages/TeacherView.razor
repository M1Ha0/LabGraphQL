@page "/TeacherView"
@using BlazorBootstrap
@using GraphQLClient.DataAccess
@using GraphQLClient.DataAccess.Model
@using System.ComponentModel.DataAnnotations
@using System.Drawing


@inject NavigationManager NavigationManager

<h3>Список преподавателей</h3>
@if (AllTeacher.Count == 0)
{
    <p><em>Loading ....</em></p>
}

else
{
    <Grid TItem="Teacher"
          Class="table table-hover table-bordered table-striped"
          DataProvider="TeacherDataProvider"
          AllowPaging="true"
          AllowFiltering="true"
          AllowSorting="true"
          AutoHidePaging="true"
          PageSize="10"
          PageSizeSelectorVisible="true"
          PageSizeSelectorItems="@(new int[] { 5,10,20 })"
          Responsive="true">
        <GridColumns>
            <GridColumn TItem="Teacher" HeaderText="Имя" PropertyName="Name" SortKeySelector="item => item.Name">
                @context.Name
            </GridColumn>
            <GridColumn TItem="Teacher" HeaderText="Фамилия" PropertyName="SurName" SortKeySelector="item => item.SurName" TextAlignment="Alignment.Center">
                @context.SurName
            </GridColumn>
            <GridColumn TItem="Teacher" HeaderText="Телефон" PropertyName="Phone" SortKeySelector="item => item.Phone">
                @context.Phone
            </GridColumn>
            <GridColumn TItem="Teacher" HeaderText="Карточка преподавателя" PropertyName="TeacherId" Filterable=false TextAlignment="Alignment.Center">
                <a href="/TaskTeachView/@context.TeacherId"><img src="images/card.png" class="imgEmployer" alt="/TaskTeachView/@context.TeacherId" /></a>
            </GridColumn>
        </GridColumns>
    </Grid>
}

@code {
    private List<Teacher> AllTeacher = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            string completeQuery = "query{allTeacherOnly{teacherId,name,surName,phone}}";
            string qraphQLQueryType = "allTeacherOnly";
            var result = await Query.ExceuteQueryReturnListAsyn<Teacher>(qraphQLQueryType, completeQuery);
            AllTeacher = result;
        }
        catch (Exception ex)
        {
            throw;
        }
    }
    private async Task<GridDataProviderResult<Teacher>> TeacherDataProvider(GridDataProviderRequest<Teacher> request)
    {
        return await Task.FromResult(request.ApplyTo(AllTeacher));
    }
}
